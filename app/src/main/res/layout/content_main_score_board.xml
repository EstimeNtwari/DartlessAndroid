<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.capstone.group1.dartlessdartboard.MainScoreBoard"
    tools:showIn="@layout/activity_main_score_board"
    android:background="#fafafa">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Score: "
        android:id="@+id/textView"
        android:layout_marginTop="74dp"
        android:textSize="25dp"
        android:layout_below="@+id/TurnIndicator"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LogoImage"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/Player1Score"
        android:textSize="25dp"
        android:layout_alignTop="@+id/textView"
        android:layout_marginLeft="115dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Darts"
        android:id="@+id/textView2"
        android:textSize="25dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/Player1Darts"
        android:textSize="25dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignStart="@+id/Player1Score" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Game"
        android:id="@+id/ResetButton"
        android:layout_marginTop="25dp"
        android:textColor="#ffffff"
        android:background="@drawable/mybutton"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Player &quot;&quot;s Turn"
        android:id="@+id/TurnIndicator"
        android:textColor="#ff0000"
        android:layout_below="@+id/LogoImage"
        android:layout_centerHorizontal="true" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Score: "
        android:id="@+id/textView6"
        android:layout_alignTop="@+id/Player1Score"
        android:layout_toEndOf="@+id/LogoImage"
        android:textSize="25dp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Darts"
        android:id="@+id/textView7"
        android:layout_alignBottom="@+id/Player1Darts"
        android:layout_toEndOf="@+id/LogoImage"
        android:textSize="25dp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="401"
        android:id="@+id/Player2Score"
        android:textSize="25dp"
        android:layout_above="@+id/textView2"
        android:layout_toEndOf="@+id/ResetButton"
        android:layout_marginLeft="70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/Player2Darts"
        android:textSize="25dp"
        android:layout_alignBottom="@+id/textView7"
        android:layout_toEndOf="@+id/LogoImage"
        android:layout_marginLeft="115dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Player 1"
        android:id="@+id/textView10"
        android:layout_above="@+id/Player1Score"
        android:layout_alignStart="@+id/textView"
        android:layout_marginBottom="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Player 2"
        android:id="@+id/textView11"
        android:layout_alignTop="@+id/textView10"
        android:layout_alignStart="@+id/textView6" />


    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2"
        android:background="#000000"
        android:layout_marginTop="330dp">

        <TableRow

            android:background="#FFFFFF"
            android:layout_margin="1dp"
            >

            <TextView android:text="Current Turn"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_span="3"
                android:textSize="25dp"
                />

        </TableRow>

        <TableRow
            android:background="#FFFFFF"
            android:layout_margin="1dp"
            >
            <TextView android:text="Throw 1"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="20dp"
                 />
            <TextView android:text="Throw 2"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="20dp"
                 />
            <TextView android:text="Throw 3"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="20dp"
                 />
        </TableRow>
        <TableRow
            android:background="#FFFFFF"
            android:layout_margin="1dp"
            >
            <TextView android:text="XX"
                android:gravity="center"

                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="22dp"
                android:id="@+id/Throw1" />
            <TextView android:text="XX"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="22dp"
                android:id="@+id/Throw2" />
            <TextView android:text="XX"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="22dp"
                android:id="@+id/Throw3" />
        </TableRow>
    </TableLayout>




</RelativeLayout>
