<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.capstone.group1.dartlessdartboard.MainScoreBoard"
    tools:showIn="@layout/activity_main_score_board">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Score: "
        android:id="@+id/textView"
        android:layout_marginTop="74dp"
        android:textSize="30dp"
        android:layout_below="@+id/TurnIndicator"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LogoImage"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/CurrentScore"
        android:textSize="30dp"
        android:layout_alignTop="@+id/textView"
        android:layout_marginLeft="120dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Darts"
        android:id="@+id/textView2"
        android:textSize="30dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/Darts"
        android:textSize="30dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignStart="@+id/CurrentScore" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/ResetButton"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Player &quot;&quot;s Turn"
        android:id="@+id/TurnIndicator"
        android:textColor="#ff0000"
        android:layout_below="@+id/LogoImage"
        android:layout_centerHorizontal="true" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Score: "
        android:id="@+id/textView6"
        android:layout_alignTop="@+id/CurrentScore"
        android:layout_toEndOf="@+id/LogoImage"
        android:textSize="30dp"
        android:layout_marginLeft="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Darts"
        android:id="@+id/textView7"
        android:layout_alignBottom="@+id/Darts"
        android:layout_toEndOf="@+id/LogoImage"
        android:textSize="30dp"
        android:layout_marginLeft="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/textView8"
        android:textSize="30dp"
        android:layout_above="@+id/textView2"
        android:layout_toEndOf="@+id/ResetButton"
        android:layout_marginLeft="85dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/textView9"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/textView7"
        android:layout_toEndOf="@+id/LogoImage"
        android:layout_marginLeft="130dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Player 1"
        android:id="@+id/textView10"
        android:layout_above="@+id/CurrentScore"
        android:layout_alignStart="@+id/textView"
        android:layout_marginBottom="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Player 2"
        android:id="@+id/textView11"
        android:layout_alignTop="@+id/textView10"
        android:layout_alignStart="@+id/textView6" />

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="330dp"
        android:contextClickable="false">

        <TableRow

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Current Turn"
                android:textSize="25dp" >
            </TextView>

        </TableRow>


        <TableRow

            android:layout_width="wrap_content">
            <TextView android:text="Throw 1"
                android:layout_weight="1"
                android:padding="3dip"
                android:textSize="20dp"
                android:layout_column="0" />

            <TextView android:text="Throw 2"
                android:layout_weight="1"
                android:padding="3dip"
                android:textSize="20dp"
                android:layout_span="1"
                android:layout_column="2" />

            <TextView android:text="Throw 3"
                android:layout_weight="1"
                android:padding="3dip"
                android:textSize="20dp"
                android:layout_column="3"
                android:layout_span="1" />
        </TableRow>

        <TableRow
            android:layout_weight="1">
            <TextView android:text="XX"
                android:layout_weight="1"
                android:padding="3dip"
                android:textSize="20dp"
                android:id="@+id/Throw1Display" />
            <TextView android:text="XX"
                android:layout_weight="1"
                android:padding="3dip"
                android:textSize="20dp"
                android:id="@+id/Throw2Display" />
            <TextView android:text="XX"
                android:layout_weight="1"
                android:padding="3dip"
                android:textSize="20dp"
                android:id="@+id/Throw3Display" />
        </TableRow>

    </TableLayout>

</RelativeLayout>
